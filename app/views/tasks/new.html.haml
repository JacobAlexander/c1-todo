%h1.h1
  New Task
.form-task.form-sI
  = render 'partials/errors', :obj => @task
  =form_for :task, :url => board_tasks_path, :html => {:class => 'form-g'} do |f|
    .form-i
      = f.label :content
      = f.text_area :content
    .form-i
      = f.label :start_date
      = f.text_field :start_date, :class => 'datetimepicker'
    .form-i
      = f.label :finish_date
      = f.text_field :finish_date, :class => 'datetimepicker'
    .form-i
      = f.submit 'Create task'